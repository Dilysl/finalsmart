<%= form_for [current_user, @record] do |f| %> 

<% if @record.errors.any? %>
		<h2>
			<%= pluralize(@record.errors.count, "error")%>
			prohibited this place from being saved
		</h2>
		<ul>
			<% @record.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<p>
	<%= f.label :date %>
	<%= f.date_field :date, placeholder: 'Date of saving' %>
	</p>
	<p>
		<%= f.label :amount %>
		<%= f.text_field :amount, placeholder: 'Amount saved' %>
	</p>
	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.submit %>
	</p>

<% end %>
